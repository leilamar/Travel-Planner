{{#if user}}
    {{#if query}}
    <p>All trips involving "{{query}}"</p>
    {{/if}}

    <div id="filter-card" class="row">
        <div class="col s4 offset-s8">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <form method="GET" action="/" class="short-form">
                        <span class="card-title">Filter view:</span>
                        <input type="text" placeholder="place" name="place">
                        <input class="btn" type="submit" value="filter">
                    </form>
                </div>
                <div class="card-action">
                    <a href="/add">Add a trip</a>
                </div>
            </div>
        </div>
    </div>

    {{#if planned}}
    <h4>Planned Trips:</h4>
        {{#each planned as |plan|}}
        <div class="row">
            <div class="col s12 m7">
            <div class="card">
                {{!-- <div class="card-image">
                    <img src="img/sample-1.jpg">
                    <span class="card-title">{{plan.place}}</span>
                </div> --}}
                <div class="card-content">
                    <span class="card-title">{{plan.place}}</span>
                    <p>{{plan.desc}}</p>
                </div>
                <div class="card-action">
                    <a href="">Edit</a>
                </div>
            </div>
            </div>
        </div>
        {{/each}}
        <form method="GET" action="/test">
            <input class="hidden" type="text" name="type" value="planned">
            <input class="btn" type="submit" value="More">
        </form>
    {{/if}}

    <!-- TODO find not if-->
    {{#if user.planned}}
        
    {{else}}
        <h4>Planned Trips:</h4>
        <p>You don't have any trips planned.</p>
        <a href="/add" class="btn">Add a trip</a>
    {{/if}}

    {{#if completed}}
    <br><hr>
    <h4>Completed Trips:</h4>
        {{#each completed as |complete|}}
        <div class="row">
            <div class="col s12 m7">
            <div class="card">
                {{!-- <div class="card-image">
                    <img src="img/sample-2.jpg">
                    <span class="card-title">{{complete.place}}</span>
                </div> --}}
                <div class="card-content">
                    <span class="card-title">{{complete.place}}</span>
                    <p>{{complete.desc}}</p>
                </div>
                <div class="card-action">
                    <a href="">Edit</a>
                </div>
            </div>
            </div>
        </div>
        {{/each}}
        <form method="GET" action="/test">
            <input class="hidden" type="text" name="type" value="completed">
            <input class="btn" type="submit" value="More">
        </form>
    {{/if}}

    <!-- TODO find not if-->
    {{#if user.planned}}
        
    {{else}}
        <h4>Completed Trips:</h4>
        <p>You haven't completed any trips.</p>
        <a href="/add" class="btn">Add a trip</a>
    {{/if}}

    {{!-- <form method="GET" action="/">
        <p>Filter view:</p>
        <p>
        <input type="text" placeholder="place" name="place">
        <input class="btn" type="submit" value="filter">
        </p>
    </form>
    <p><a href="/add">Add a trip</a></p> --}}
    
{{else}}
    <div id="index-banner" class="parallax-container">
        <div class="section no-pad-bot">
          <div class="container">
            <br><br><br><br><br>

            <div class="row center">
                <div class="col s12">
                    <span class="light white-text" style="text-shadow: 2px 2px 4px #000000;"><h4>Start your adventure here</h4></span>
                    <br><br>
                    <a class="btn-large green waves-effect waves-light lighten-2 z-depth-3" href="/register">Register</a>
                    <a class="btn-large green waves-effect waves-light lighten-2 z-depth-3" href="/login">Login</a>
                </div>
            </div>
            <br><br>

          </div>
        </div>
        <div class="parallax"><img src="img/landing-2.jpg"></div>
      </div>

      <div class="container">
        <div class="section">
            <div class="col s12 m4">
                <div class="icon-block">
                    <h2 class="center green-text"><i class="material-icons">favorite</i></h2>

                    <h5 class="light">My Adventure Book is a web app that allows you to keep track 
                    of all your travel plans. Create plans for places you want to 
                    visit and keep track of places you've already been!</h5>
                    <br><br><br>
                </div>
            </div>
        </div>
    </div>

    <div class="parallax-container">
        <div class="parallax"><img src="img/landing-3.jpg"></div>
    </div>
