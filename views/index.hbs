{{#if user}}
    {{#if query}}
    <p>All trips involving "{{query}}"</p>
    {{/if}}
    
    {{#if planned}}
    <h2>Planned Trips:</h2>
        {{#each planned as |plan|}}
            <p>{{plan.place}}:</p>
            <p>{{plan.desc}}</p>
            <hr>
        {{/each}}
    {{/if}}

    <!-- TODO find not if-->
    {{#if user.planned}}
        
    {{else}}
        <h2>Planned Trips:</h2>
        <p>You don't have any trips planned. Click <a href="/add">here</a> to add a trip.</p>
    {{/if}}

    {{#if completed}}
    <h2>Completed Trips:</h2>
        {{#each completed as |complete|}}
            <p>{{complete.place}}:</p>
            <p>{{complete.desc}}</p>
            <hr>
        {{/each}}
    {{/if}}

    <!-- TODO find not if-->
    {{#if user.planned}}
        
    {{else}}
        <h2>Completed Trips:</h2>
        <p>You haven't completed any trips. Click <a href="/add">here</a> to add a trip.</p>
    {{/if}}

    <form method="GET" action="/">
        <p>Filter view:</p>
        <p>
        place <input type="text" name="place">
        <input type="submit" value="filter">
        </p>
    </form>
    <p><a href="/add">Add a trip</a></p>
{{else}}
    <p> My Adventure Book is a web app that allows you to keep track 
    of all your travel plans. Create plans for places you want to 
    visit and keep track of places you've already been!</p>
    
    <p>Log in or register to start your adventure book.</p>
{{/if}}